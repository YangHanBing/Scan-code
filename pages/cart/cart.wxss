/* pages/cart/cart.wxss */
.list {
  padding-bottom: 180rpx;
}
.action_box {
  width: 100%;
  height: 180rpx;
  border-top: 1px solid #ccc;
  position: fixed;
  left: 0;
  bottom: 0;
}
.total_price {
  font-size: 32rpx;
  height: 80rpx;
  line-height: 80rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
}
.total_price .zj {
  color: #999;
}
.total_price .price {
  color: red;
}
.action {
  height: 100rpx;
  width: 100%;
  display: flex;
  color: #fff;
}
.action .reAdd {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #ffa72b;
}
.action .toPay {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #ff0000;
}
